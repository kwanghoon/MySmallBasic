Sub Changeturn
  If turn = 1 Then
    turn = 2
  Else
    turn = 1
  EndIf
EndSub

Sub OnGameC
  If (turn=1 And computer = 1) Or (turn=2 And computer = 2) Then 
   GraphicsWindow.MouseDown = Empty
   
   If Array.ContainsValue(board, "o") Then
     Program.Delay(3000)
   EndIf
   predict() 
   Draw()
   
   Check()
   Printboard()
   If result = 0 Then
    Changeturn()
    Showturn()
    GraphicsWindow.MouseDown = OnGameU
   EndIf
  EndIf

EndSub

